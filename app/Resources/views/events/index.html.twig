{% extends 'base.html.twig' %}

{% block content %}
    <div class="container text-light content ">
        <h1>Prochain événement</h1>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Startdate</th>
                                <th>Enddate</th>
                                <th>Place</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for event in events %}
                            <tr>
                                <td><a href="{{ path('events_show', { 'id': event.id }) }}">{{ event.id }}</a></td>
                                <td>{{ event.title }}</td>
                                <td>{{ event.description }}</td>
                                <td>{{ event.price }}</td>
                                <td>{% if event.startDate %}{{ event.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if event.endDate %}{{ event.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{{ event.place }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('events_show', { 'id': event.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('events_edit', { 'id': event.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <ul class="nav justify-content-center grey lighten-4 py-4">
            <li>
                <a href="{{ path('events_new') }}"><input type="button" value="Créer un événement" class="btn btn-success btn-rounded btn-sm bouton"></a>
                
            </li>
        </ul>
    </div>
{% endblock %}
