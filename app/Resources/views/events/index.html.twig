{% extends 'base.html.twig' %}

{% block content %}
    <div class="container text-light content ">
        <h1>Events list</h1>

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Startdate</th>
                    <th>Enddate</th>
                    <th>Place</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for event in event %}
                <tr>
                    <td><a href="{{ path('events_show', { 'id': event.id }) }}">{{ event.id }}</a></td>
                    <td>{{ event.title }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.price }}</td>
                    <td>{% if event.startDate %}{{ event.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if event.endDate %}{{ event.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ event.place }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('events_show', { 'id': event.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('events_edit', { 'id': event.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('events_new') }}">Create a new event</a>
            </li>
        </ul>
    </div>
{% endblock %}
