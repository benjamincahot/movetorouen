{% extends 'base.html.twig' %}

{% block content %}
  <div class="container text-light content2 ">
    <h1 style="margin-left:-25%;margin-bottom:2%;">
      Event
    </h1>
    <div class="card" style="background-color:#171c2f;  ">
      <div class="card-body">
        <div class="row">
          <table>
            <tbody>
              <div class="container">
                <tr>
                  <th>Id</th>
                  <td>{{ event.id }}</td>
                </tr>
                <tr>
                  <th>Title</th>
                  <td>{{ event.title }}</td>
                </tr>
                <tr>
                  <th>Description</th>
                  <td>{{ event.description }}</td>
                </tr>
                <tr>
                  <th>Price</th>
                  <td>{{ event.price }}</td>
                </tr>
                <tr>
                  <th>Startdate</th>
                  <td>
                    {% if event.startDate %}{{ event.startDate|date('Y-m-d H:i:s') }}
                    {% endif %}
                  </td>
                </tr>
                <tr>
                  <th>Enddate</th>
                  <td>
                    {% if event.endDate %}{{ event.endDate|date('Y-m-d H:i:s') }}
                    {% endif %}
                  </td>
                </tr>
                <tr>
                  <th>Place</th>
                  <td>{{ event.place }}</td>
                </tr>
              </div>
            </tbody>
          </table>
        </div>
      </div>
      {% if is_granted('ROLE_ADMIN')%}
        <div class="list-group-item float-right" style="background-color:#171c2f;line-height:2;">

          <a href="{{ path('events_edit', { 'id': event.id }) }}"><input type="button" value="Editer l'événement" class=" btn btn-success btn-rounded btn-sm bouton"></a>

          {{ form_start(delete_form) }}
          <input type="submit" value="Supprimer l'événement" class=" btn btn-danger btn-rounded btn-sm bouton">
          {{ form_end(delete_form) }}

        </div>
      {% endif %}
    </div>
  </div>
  <div class="container">
    <h1 class="text-light" style="margin-left:-6%;margin-bottom:5%;margin-top:3%;">Dernier événement</h1>
    <div class="row text-center" style="width:100%;margin-left:0%;line-height: 1.2;">
      <div class="col-lg-4 col-md-12 mb-lg-1 mb-4 text-light ">
        <div class="view overlay rounded z-depth-1 ">
          <img src="https://mdbootstrap.com/img/Photos/Others/images/58.jpg" class="img-fluid" alt="Sample project image">
          <a>
            <div class="mask rgba-white-slight waves-effect waves-light"></div>
          </a>
        </div>
        <div class="card-body pb-0">
          <h4 class="font-weight-bold my-3">Title of the news</h4>
          <p class="grey-text">Temporibus autem quibusdam aut officiis et voluptates repudiandae.</p>
          <a class="btn btn-outline-danger btn-sm waves-effect waves-light">
            <i class="fa fa-clone left"></i>
            View project</a>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-md-0 mb-4 text-light">
