{% extends "layoutadmin.html.twig" %}
{% block dashboard %}
<!-- Début du block dashboard (settings) -->

  <!-- Colonne header -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <div class="card-two">
              <header>
                <div class="avatar">
                  <img src="#" alt=" avatar de {{ app.user.username }}">
                </div>
              </header>
              <h3>{{ app.user.username }}</h3>
              <div class="desc">
                {% if is_granted('ROLE_ADMIN') %}Administrateur{% elseif is_granted('ROLE_USER') %}Membre{% else %}Anonyme{% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Fin de la colonne header -->

      <!-- Colonne changement de mot de passe -->
      <div class="col-lg-12">
        <div class="card">
          <div class="tab-pane">
            <div class="card-body">
              <form class="form-horizontal form-material">
                <div class="form-group">
                  <label class="col-md-12">Modifier le mot de passe</label>
                  <div class="col-md-12">
                    <input type="password" placeholder="" class="form-control form-control-line">
                  </div>
                </div>
                <div class="form-group">
                  <label for="example-password" class="col-md-12">Confirmez le changement de mot de passe</label>
                  <div class="col-md-12">
                    <input type="password" placeholder="" class="form-control form-control-line">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-12">
                    <input type="submit" value="Mettre a jour le mot de passe" class="btn btn-flat btn-danger text-center"></input>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- Fin de la colonne changement de mot de passe -->

      <!-- Colonne de modification (pseudo, email, rôle) -->
      <div class="col-lg-12">
  <div class="card">
    <div class="tab-pane">
      <div class="card-body">
        <form class="form-horizontal form-material">
          <div class="form-group">
            <label class="col-md-12">Modifier l'avatar</label>
            <input type="file" class="form-control-file form-control form-control-line" id="file">
          </div>
          <div class="form-group">
            <label class="col-md-12">Modifier le pseudo</label>
            <div class="col-md-12">
              <input type="text" placeholder="{{ app.user.username }}" class="form-control form-control-line">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-12">Modifier l'email</label>
            <div class="col-md-12">
              <input type="email" placeholder="#" class="form-control form-control-line" name="email" id="email">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-12">Modifier le rôle</label>
            <div class="col-md-12">
              <div class="form-group">
                <select class="form-control">
                  <option class="disabled">
                    {% if is_granted('ROLE_ADMIN') %}Administrateur{% elseif is_granted('ROLE_USER') %}Membre{% else %}Anonyme{% endif %}
                  </option>
                  <option>Membre</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <input type="submit" value="Mettre a jour le profil" class="btn btn-flat btn-success text-center"></input>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<!-- Fin de la colonne modification (pseudo, email, rôle) -->

</div>
<!-- Fin du block dashboard (settings) -->
{% endblock %}
