{% extends "layoutadmin.html.twig" %}
{% block welcome %}
  <a style="color:#ffffff">Bienvenue
    {{ app.user.username }}
    <i class="fas fa-child"></i>
  </a>
{% endblock %}
{% block dashboard %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card p-30 bg-danger">
          <div class="media">
            <div class="media-left meida media-middle">
              <span>
                <i class="fas fa-calendar f-s-40 color-secondary"></i>
              </span>
            </div>
            <div class="media-body media-text-right">
              <h2 class="text-white">{{ countevents }}</h2>
              <p class="m-b-0 text-white">Total d'evènement(s) actif</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-title">
        <h4>Liste des evènements</h4>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Localisation</th>
                <th>Prix</th>
                <th>Auteur</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
              <tr>
                {% for event in events %}
                  <th scope="row">{{ event.id }}</th>
                  <td>{{ event.title }}</td>
                  <td>{{ event.description }}</td>
                  <td>{{ event.place }}</td>
                  <td>{{ event.price }}</td>
                  <td>{{ event.user }}</td>
                  <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('events_show', { 'id': event.id }) }}">
                      <i class="fas fa-eye"></i> Voir
                    </a>
                    <a class="btn btn-sm btn-warning" href="{{ path('edit_event_admin', { 'id': event.id}) }}">
                      <i class="fas fa-pencil-alt"></i> Editer
                    </a>
                    <a class="btn btn-sm btn-danger" href="">
                      <i class="fas fa-trash"></i> Supprimer
                    </a>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
