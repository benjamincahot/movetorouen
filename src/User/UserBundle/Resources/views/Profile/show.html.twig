{% extends 'base.html.twig' %}

{% block content %}
<div class="container" style="margin-top:10%">
    <div class="row">
        <div class="col-sm-8 ml-auto mr-auto text-white">
            <h2>Votre Profil</h2>
                <table class="table">
                    <tbody>
                            <tr>
                                <th>Username</th>
                                <td>{{ app.user.username }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ app.user.email }}</td>
                            </tr>
                    </tbody>
                </table>
                <button class="btn btn-secondary" href="{{ path('fos_user_profile_edit') }}">Editer mon profil</button>
        </div>
    </div>
</div>
{% endblock %}
